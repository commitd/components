{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "stitches.config": ["./stitches.config"],
      "test-utils": ["./utils/test-utils"],
      "@emotion/core": ["./typings.d.ts"],
      "@storybook/theming": ["./typings.d.ts"]
    }
  },
  "include": ["src"],
  // due to png import issue
  "exclude": ["**/HoverCard.stories.tsx"]
}
