{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "debug": {
      "dependsOn": ["build"]
    },
    "codegen": {
      "dependsOn": ["^codegen"]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
