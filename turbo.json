{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "//#format:check": {
      "outputs": [],
      "outputMode": "new-only"
    },
    "debug": {
      "dependsOn": ["build"]
    },
    "codegen": {
      "dependsOn": ["^codegen", "^build"]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "storybook-static/**"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["build"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
