{
  "version": "5.0.0-beta.1",
  "name": "@committed/components",
  "description": "Committed Component Library",
  "author": "Committed",
  "license": "MIT",
  "private": false,
  "repository": "git://github.com/commitd/components.git",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "module": "dist/components.esm.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "format": "prettier --write '**/{src,test,stories}/**/{*.js,*.ts,*.tsx,*.json,*.md,*.mdx}' example/index.tsx",
    "deploy-storybook": "storybook-to-ghpages",
    "danger:local": "danger local -b main --dangerfile dangerfile.lite.ts",
    "danger:pr": "cross-env DANGER_GITHUB_API_TOKEN=${GITHUB_TOKEN} danger pr https://github.com/commitd/components/pull/${PR}"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "40 KB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "snapshotSerializers": [
      "jest-stitches"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleDirectories": [
      "node_modules",
      "utils"
    ],
    "coveragePathIgnorePatterns": [
      "/src/typings.d.ts",
      "setupTests.tsx",
      ".*/index.ts",
      ".*.test.ts",
      ".*.stories.tsx"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@size-limit/preset-small-lib": "^4.6.2",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/react": "^6.2.8",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.2.8",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "babel-loader": "^8.2.2",
    "danger": "^10.5.4",
    "danger-plugin-spellcheck": "^1.2.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "jest-stitches": "^1.0.4",
    "plop": "^2.7.4",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "size-limit": "^4.10.2",
    "storybook-dark-mode": "^1.0.7",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@stitches/react": "^0.1.8"
  }
}
