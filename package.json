{
  "version": "5.0.0-beta.1",
  "name": "@committed/components",
  "description": "Committed Component Library",
  "author": "Committed",
  "license": "MIT",
  "private": false,
  "repository": "git://github.com/commitd/components.git",
  "main": "dist/committed-components.cjs.js",
  "module": "dist/committed-components.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "postinstall": "rimraf node_modules/@emotion/core/types",
    "build": "rollpkg build --tsconfig ./tsconfig.build.json",
    "watch": "rollpkg watch",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "coverage": "npx live-server coverage/lcov-report",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "format": "prettier --write '**/{src,test,stories}/**/{*.js,*.ts,*.tsx,*.json,*.md,*.mdx}' example/index.tsx",
    "deploy-storybook": "storybook-to-ghpages",
    "danger:local": "danger local -b main --dangerfile dangerfile.lite.ts",
    "danger:pr": "cross-env DANGER_GITHUB_API_TOKEN=${GITHUB_TOKEN} danger pr https://github.com/commitd/components/pull/${PR}"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "40 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "40 KB"
    }
  ],
  "eslintConfig": {
    "extends": [
      "./node_modules/rollpkg/configs/eslint"
    ],
    "plugins": [
      "import"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "rules": {
      "import/default": "off",
      "import/no-default-export": "off",
      "react/display-name": "off",
      "import/no-named-as-default-member": "warn"
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "docs",
      "**/*.stories.tsx",
      "**/*.test.ts"
    ]
  },
  "jest": {
    "preset": "rollpkg",
    "snapshotSerializers": [
      "jest-stitches"
    ],
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleDirectories": [
      "node_modules",
      "utils"
    ],
    "testRegex": "/src/.*(\\.|/)(test|spec)\\.[jt]sx?$",
    "coveragePathIgnorePatterns": [
      "/src/typings.d.ts",
      "setupTests.tsx",
      ".*/index.ts",
      ".*.test.ts",
      ".*.stories.tsx"
    ]
  },
  "devDependencies": {
    "@fontsource/dosis": "^4.3.0",
    "@fontsource/inter": "^4.3.0",
    "@size-limit/preset-small-lib": "^4.6.2",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/react": "^6.2.8",
    "@storybook/storybook-deployer": "^2.8.7",
    "@storybook/theming": "^6.2.8",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.5",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "danger": "^10.5.4",
    "danger-plugin-spellcheck": "^1.2.3",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-sonar-reporter": "^2.0.0",
    "jest-stitches": "^1.0.4",
    "jest-watch-typeahead": "^0.6.3",
    "plop": "^2.7.4",
    "pretty-quick": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "rollpkg": "^0.5.6",
    "size-limit": "^4.10.2",
    "story-description-loader": "^1.0.0",
    "storybook-dark-mode": "^1.0.7",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^0.0.14",
    "@radix-ui/react-avatar": "^0.0.13",
    "@radix-ui/react-checkbox": "^0.0.15",
    "@radix-ui/react-polymorphic": "^0.0.11",
    "@radix-ui/react-radio-group": "^0.0.16",
    "@radix-ui/react-tooltip": "^0.0.18",
    "@stitches/react": "^0.1.9"
  }
}
