{
  "version": "5.0.0-beta.9",
  "name": "@committed/components",
  "description": "Committed Component Library",
  "author": "Committed",
  "license": "MIT",
  "private": false,
  "repository": "git://github.com/commitd/components.git",
  "main": "dist/committed-components.cjs.js",
  "module": "dist/committed-components.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "postinstall": "rimraf node_modules/@emotion/core/types",
    "build": "rollpkg build --tsconfig ./tsconfig.build.json",
    "watch": "rollpkg watch",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "lint": "eslint './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:ci": "jest --coverage",
    "test:watch": "jest --watchAll",
    "coverage": "npx live-server coverage/lcov-report",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "generate": "plop --plopfile ./generators/plopfile.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "format": "prettier --write 'src/**/{*.js,*.ts,*.tsx,*.json,*.md,*.mdx}' example/index.tsx",
    "deploy-storybook": "storybook-to-ghpages",
    "danger:local": "danger local -b main --dangerfile dangerfile.lite.ts",
    "danger:pr": "danger pr https://github.com/commitd/components/pull/${PR}",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "react": ">= 16.8.0",
    "react-dom": ">= 16.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "size-limit": [
    {
      "path": "dist/committed-components.cjs.production.js",
      "limit": "730 KB"
    },
    {
      "path": "dist/committed-components.esm.js",
      "limit": "60 KB"
    }
  ],
  "eslintConfig": {
    "extends": [
      "./node_modules/rollpkg/configs/eslint"
    ],
    "plugins": [
      "import"
    ],
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "rules": {
      "import/default": "off",
      "import/no-default-export": "off",
      "react/display-name": "off",
      "import/no-named-as-default-member": "warn"
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "docs",
      "**/*.stories.tsx",
      "**/*.test.ts"
    ]
  },
  "jest": {
    "preset": "rollpkg",
    "setupFiles": [
      "./jest.patch-cssom.js"
    ],
    "snapshotSerializers": [
      "jest-stitches"
    ],
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "moduleDirectories": [
      "node_modules",
      "utils"
    ],
    "testRegex": "/src/.*(\\.|/)(test|spec)\\.[jt]sx?$",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/types/**/*"
    ],
    "coveragePathIgnorePatterns": [
      "/src/typings.d.ts",
      "setupTests.tsx",
      ".*/index.ts",
      ".*.test.ts",
      ".*.stories.tsx"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,md,json,mdx}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint --cache --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@fontsource/dosis": "^4.4.5",
    "@fontsource/inter": "^4.4.5",
    "@size-limit/preset-small-lib": "^5.0.1",
    "@storybook/addon-docs": "^6.3.2",
    "@storybook/addon-essentials": "^6.3.2",
    "@storybook/react": "^6.3.2",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.3.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.1.9",
    "@types/faker": "^5.5.6",
    "@types/parse-color": "^1.0.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-router-dom": "^5.1.7",
    "danger": "^10.6.6",
    "danger-plugin-spellcheck": "^1.2.3",
    "eslint": "^7.29.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.5.3",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "jest-sonar-reporter": "^2.0.0",
    "jest-stitches": "^1.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "lint-staged": "^11.0.0",
    "parse-color": "^1.0.0",
    "plop": "^2.7.4",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-virtual": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "rollpkg": "^0.5.7",
    "size-limit": "^5.0.1",
    "story-description-loader": "^1.0.0",
    "storybook-dark-mode": "^1.0.8",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "^4.3.4"
  },
  "dependencies": {
    "@committed/hooks": "^0.4.0",
    "@mdi/js": "^5.9.55",
    "@radix-ui/colors": "^0.1.7",
    "@radix-ui/react-accordion": "0.0.17",
    "@radix-ui/react-alert-dialog": "0.0.19",
    "@radix-ui/react-avatar": "0.0.14",
    "@radix-ui/react-checkbox": "0.0.16",
    "@radix-ui/react-context-menu": "0.0.23",
    "@radix-ui/react-dialog": "0.0.19",
    "@radix-ui/react-dropdown-menu": "0.0.22",
    "@radix-ui/react-label": "0.0.14",
    "@radix-ui/react-polymorphic": "0.0.12",
    "@radix-ui/react-popover": "^0.0.19",
    "@radix-ui/react-progress": "^0.0.14",
    "@radix-ui/react-radio-group": "0.0.18",
    "@radix-ui/react-separator": "0.0.14",
    "@radix-ui/react-slider": "0.0.16",
    "@radix-ui/react-switch": "0.0.14",
    "@radix-ui/react-tabs": "0.0.15",
    "@radix-ui/react-tooltip": "0.0.20",
    "@stitches/react": "^0.2.2"
  }
}
