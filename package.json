{
  "version": "0.0.0-development",
  "name": "@committed/components",
  "description": "Committed Component",
  "author": "Committed",
  "license": "MIT",
  "repository": "git://github.com/commitd/components",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm add rimraf -g",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "debug": "turbo run debug",
    "lint": "turbo run lint",
    "format": "prettier --write '**/{*.js,*.ts,*.tsx,*.json,*.md,*.mdx}'"
  },
  "devDependencies": {
    "@committed/eslint-config": "workspace:*",
    "@committed/tsconfig": "workspace:*",
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "prettier": "3.0.0",
    "tsup": "^7.1.0",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@7.15.0",
  "lint-staged": {
    "*.{ts,tsx,md,json,mdx}": "prettier --write",
    "*.{ts,tsx}": [
      "eslint --cache --fix"
    ]
  }
}
